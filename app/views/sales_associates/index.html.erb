<p id="notice"><%= notice %></p>

<h1>Sales Associates</h1>


<table class="table table-bordered ">
  <thead>
    <tr>
      <th>Name</th>
      <th>Department</th>
      <th class="datatable-nosort">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @sales_associates.each do |sales_associate| %>
      <tr>
        <td><%= link_to sales_associate.name, sales_associate %></td>
        <td><%= sales_associate.department %></td>
        <td>
          <div class="table-cell-container">
            <div><%= link_to 'Edit', edit_sales_associate_path(sales_associate) %></div>
            <div><%= link_to 'Remove', sales_associate, method: :delete, data: { confirm: 'Are you sure?' } %></div>
          <div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%==pagy_bootstrap_nav(@pagy)%>

